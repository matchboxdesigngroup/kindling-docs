{
	"version": 3,
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"title": "Navigation - Vertical",
	"slug": "navigation-vertical",
	"blockTypes": [
		"core/navigation",
		"core/navgation-link"
	],
	"styles": {
		"blocks": {
			"core/navigation": {
				"color": {
					"text": "rgb(from currentColor r g b / 80%)"
				},
				"css": ".wp-block-navigation { row-gap: 0.75rem !important; };",
				"elements": {
					"link": {
						":hover": {
							"color": {
								"text": "var(--wp--custom--color--pairing--base) !important"
							}
						}
					}
				}
			},
			"core/navigation-link": {
				"typography": {
					"fontSize": "1rem"
				},
				"elements": {
					"link": {
						"typography": {
							"textDecoration": "none"
						}
					}
				}
			},
			"core/page-list": {
				"border": {
					"left": {
						"width": "1px",
						"color": "rgb(from currentColor r g b / 20%)",
						"style": "solid"
					}
				},
				"color": {
					"text": "rgb(from currentColor r g b / 60%)"
				},
				"css": ".wp-block-page-list { row-gap: 0.5rem !important; }",
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)"
				},
				"elements": {
					"link": {
						"spacing": {
							"padding": {
								"left": "1rem !important"
							}
						},
						"typography": {
							"fontWeight": "300"
						},
						":hover": {
							"border": {
								"left": {
									"width": "1px",
									"color": "rgb(from currentColor r g b / 50%)",
									"style": "solid"
								}
							},
							"color": {
								"text": "var(--wp--custom--color--pairing--base) !important"
							},
							"spacing": {
								"margin": {
									"left": "-1px !important"
								}
							}
						}
					}
				}
			}
		}
	}
}